<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MeetingHelper.HostPage">
    <ContentPage.Content>
        <Grid>
            <!--Background image-->
            <!--<Image Opacity="0.5"
				   x:Name="img"
				   Source="bridge_bg.png"
				   Scale="1.5"
				   Aspect="AspectFill"/>-->
            <BoxView BackgroundColor="#333333"></BoxView>

            <StackLayout Padding="10,25,10,5" x:Name="Main_Layout">
                <!--<StackLayout HeightRequest="160">
                    <Label Text="Current WiFi:" FontSize="Large" HorizontalOptions="Center" Margin="0,0,0,5"/>
                    <Label Text="WiFi Name" TextColor="Black" BackgroundColor="Orange" FontAttributes="Bold" FontSize="30"  HorizontalTextAlignment="Center" Margin="10,0,10,0"/>
                    <Label Text="BSSID: ca:6c:87:3b:de:18               Link speed: 34Mb/s" TextColor="Black" BackgroundColor="#88FFA500" FontSize="20"  HorizontalTextAlignment="Center" Margin="10,0,10,0"/>
                </StackLayout>-->
                <Label x:Name="Debug_Label" Text="debug" FontSize="Large" HorizontalOptions="Center" Margin="10"/>
                <Label x:Name="Debug_Label2" Text="debug2" FontSize="Large" HorizontalOptions="Center" Margin="10"/>
                <Label Text="Members:" FontAttributes="None" FontSize="Large" HorizontalOptions="Center"/>

                <ListView 
                    x:Name="ListView_Guests"
                    ItemsSource="{Binding .}" 
					SeparatorVisibility="None"
					BackgroundColor="Transparent"
					SeparatorColor="#DFDFDF"
					HasUnevenRows="false"
					RowHeight="60"
                    Margin="0,0,0,20"
                    >
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <ViewCell>
                                <!--Element of ListView (Fake background - To hide the ListView highlight)-->
                                <StackLayout Spacing="0" Margin="0" Padding="5,0,5,0" BackgroundColor="#333333" >
                                    <!--Frame-->
                                    <StackLayout Padding="5" BackgroundColor="#333333">
                                        <!--Content-->
                                        <StackLayout Spacing="0" BackgroundColor="#333333">
                                            <Grid ColumnSpacing="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3"/>
                                                    <ColumnDefinition Width="210"/>
                                                    <ColumnDefinition Width="3"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="5"/>
                                                </Grid.ColumnDefinitions>

                                                <BoxView Grid.Column="0" BackgroundColor="DarkOrange" WidthRequest="3" HorizontalOptions="Fill" ></BoxView>
                                                <StackLayout Grid.Column="1" Spacing="0" Padding="10,8,0,11" Margin="5,1,5,1" BackgroundColor="#66FFAA11">
                                                    <Label Text="{Binding Name}" FontAttributes="Bold" FontSize="Large" TextColor="#FFFFFF" VerticalOptions="Center" />
                                                </StackLayout>
                                                <BoxView Grid.Column="2" BackgroundColor="DarkOrange" WidthRequest="3" HorizontalOptions="Fill" ></BoxView>
                                                <StackLayout Grid.Column="3" Padding="0,13,0,11" Margin="5,1,5,1" BackgroundColor="#555555">
                                                    <Label IsVisible="True" Text="Speaking" FontAttributes="Bold" FontSize="16"  TextColor="#EEEEEE" VerticalOptions="Center" HorizontalTextAlignment="Center"/>
                                                </StackLayout>
                                            </Grid>

                                        </StackLayout>
                                    </StackLayout>
                                </StackLayout>

                            </ViewCell>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </StackLayout>
            
            <!--Warning Screen (Error & Debugging)-->
            <StackLayout x:Name="Warning_Layout" BackgroundColor="#77000000" IsVisible="False">
                <Grid VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Padding="50">
                    <StackLayout BackgroundColor="#CC000000" Padding="10" Margin="2,1,2,1" Spacing="0">
                        <Label x:Name="Warning_Title" Text="ERROR - 07" FontAttributes="Bold" FontSize="22" TextColor="White" HorizontalOptions="Start" Margin="0,5,0,5"/>
                        <BoxView BackgroundColor="Red" HeightRequest="3"></BoxView>
                        <Label x:Name="Warning_Content" Text="This is the discription of the error message." FontSize="20" TextColor="#AAAAAA" HorizontalOptions="Center" HorizontalTextAlignment="Center" Margin="0,10,0,10"/>
                        <Button Clicked="Warning_Clicked" Text="Dismiss" HorizontalOptions="Center"></Button>
                    </StackLayout>
                    <BoxView BackgroundColor="#BBFFFFFF" HeightRequest="1.5" VerticalOptions="Start"></BoxView>
                    <BoxView BackgroundColor="#BBFFFFFF" HeightRequest="1.5" VerticalOptions="End"></BoxView>
                </Grid>
            </StackLayout>
            
        </Grid>
    </ContentPage.Content>
</ContentPage>